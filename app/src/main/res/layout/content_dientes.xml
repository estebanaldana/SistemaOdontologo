<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_dientes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dante_000.sistemadientes.Dientes"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="30px"
                android:text="Ingrese los datos de la persona a Identificar"
                android:textSize="50px"
                android:textAlignment="center"/>

            <Spinner
                android:id="@+id/lista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_blue_light"/>

        <LinearLayout
            android:id="@+id/dientesuno"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="50px">

            <EditText
                android:id="@+id/CSMD"
                android:inputType="number|numberDecimal"
                android:layout_margin="5px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="5"
                android:hint="Canino Superior M-D"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/CSVL"
                android:inputType="number|numberDecimal"
                android:layout_margin="5px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="5"
                android:hint="Canino Superior V-L"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/CSDVML"
                android:inputType="number|numberDecimal"
                android:layout_margin="5px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="5"
                android:hint="Canino Superior DV-ML"
                android:textAlignment="center"/>


            <EditText
                android:id="@+id/CSDLMV"
                android:inputType="number|numberDecimal"
                android:layout_margin="5px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="5"
                android:hint="Canino Superior DL-MV"
                android:textAlignment="center" />
            </LinearLayout>



        <LinearLayout
            android:id="@+id/dientesdos"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="50px">

            <EditText
                android:id="@+id/PMSMD"
                android:inputType="number|numberDecimal"
                android:layout_margin="5px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="5"
                android:hint="Primer Molar Superior M-D"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/PMSVL"
                android:inputType="number|numberDecimal"
                android:layout_margin="5px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="5"
                android:hint="Primer Molar Superior V-L"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/PMSDVML"
                android:inputType="number|numberDecimal"
                android:layout_margin="5px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="5"
                android:hint="Primer Molar Superior DV-ML"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/PMSDLMV"
                android:inputType="number|numberDecimal"
                android:layout_margin="5px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="5"
                android:hint="Primer Molar Superior DL-MV"
                android:textAlignment="center"/>

            </LinearLayout>


        <LinearLayout
            android:id="@+id/dientestres"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="50px">

            <EditText
                android:id="@+id/CIMD"
                android:inputType="number|numberDecimal"
                android:layout_margin="5px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="5"
                android:hint="Canino Inferior M-V"
                android:textAlignment="center"/>


            <EditText
                android:id="@+id/CIVL"
                android:inputType="number|numberDecimal"
                android:layout_margin="5px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="5"
                android:hint="Canino Inferior V-L"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/CIDVML"
                android:inputType="number|numberDecimal"
                android:layout_margin="5px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="5"
                android:hint="Canino Inferior DV-ML"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/CIDLMV"
                android:inputType="number|numberDecimal"
                android:layout_margin="5px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="5"
                android:hint="Canino Inferior DL-MV"
                android:textAlignment="center"/>

            </LinearLayout>


        <LinearLayout
            android:id="@+id/dientescuatro"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="50px">

            <EditText
                android:id="@+id/PMIMD"
                android:inputType="number|numberDecimal"
                android:layout_margin="5px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="5"
                android:hint="Primer Molar Inferior M-D"
                android:textAlignment="center"/>


            <EditText
                android:id="@+id/PMIVL"
                android:inputType="number|numberDecimal"
                android:layout_margin="5px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="5"
                android:hint="Primer Molar Inferior V-L"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/PMIDVML"
                android:inputType="number|numberDecimal"
                android:layout_margin="5px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="5"
                android:hint="Primer Molar Inferior DV-ML"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/PMIDLMV"
                android:inputType="number|numberDecimal"
                android:layout_margin="5px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="5"
                android:hint="Primer Molar Inferior DL-MV"
                android:textAlignment="center"/>

            </LinearLayout>

            <Button
                android:id="@+id/cal"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calcular"
                android:layout_gravity="center"
                android:onClick="boton"
                android:background="@android:color/holo_blue_dark" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
